{
  "env": {
    "browser": true,
    "es2021": true
  },
  "ignorePatterns": [
    "PR/**/*",
    "public/**/*",
    "src/types/**/*",
    "babel.config.js",
    "jest.config.js",
    "webpack.common.js",
    "webpack.dev.js",
    "webpack.prod.js"
  ],
  "plugins": [
    "@typescript-eslint",
    "react"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module",
    "project": "./tsconfig.eslint.json",
    "tsconfigRootDir": "./"
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking",
    "plugin:react/recommended",
    "prettier"
  ]
}